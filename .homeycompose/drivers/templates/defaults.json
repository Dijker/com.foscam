{
    "images": {
        "large": "{{driverPath}}/assets/images/large.png",
        "small": "{{driverPath}}/assets/images/small.png"
    },
    "icon": "{{driverPath}}/assets/icon.svg",
    "capabilities": [
        "brightness",
        "contrast",
        "flip",
        "hue",
        "mirror",
        "saturation",
        "sharpness"
    ],
    "class": "other",
    "pair": [
        {
            "id": "start",
            "$template": "start"
        },
        {
            "id": "list_devices",
            "template": "list_devices",
            "navigation": {
                "next": "add_devices"
            }
        },
        {
            "id": "add_devices",
            "template": "add_devices"
        }
    ],
    "$flow": {
        "actions": [
            { "$extends": "reboot" },
            { "$extends": "brightness" },
            { "$extends": "contrast" },
            { "$extends": "flip" },
            { "$extends": "hue" },
            { "$extends": "mirror" },
            { "$extends": "motion_detection_isenabled" },
            { "$extends": "motion_detection_sensitivity" },
            { "$extends": "ptz_goto_preset_point" },
            { "$extends": "saturation" },
            { "$extends": "sharpness" },
            { "$extends": "snapshot" },
            { "$extends": "send_image" }
        ],
        "triggers": [
            { "$extends": "snapshot" }
        ]
    },
     "settings": [
        {
            "type": "group",
            "label": {
                "en": "Motion detection settings",
                "nl": "Bewegingsdetectie instellingen"
            },
            "children": [
                {
                    "id": "motion_detect_isenable",
                    "type": "radio",
                    "label": "Status",
                    "value": "1",
                    "hint": {
                        "en": "Enable or disable motion dection.",
                        "nl": "Schakel bewegingsdetectie in of uit."
                    },
                    "values": [
                        {
                            "id": "0",
                            "label": {
                                "en": "Disabled",
                                "nl": "Uitgeschakeld"
                            }
                        },
                        {
                            "id": "1",
                            "label": {
                                "en": "Enabled",
                                "nl": "Ingeschakeld"
                            }
                        }
                    ]
                },
                {
                    "id": "motion_detect_sensitivity",
                    "type": "radio",
                    "label": {
                        "en": "Sensitivity",
                        "nl": "Gevoeligheid"
                    },
                    "value": "1",
                    "hint": {
                        "en": "Set the sensitivity of the motion detection.",
                        "nl": "Stel de gevoeligheid van de bewegingsdetectie in."
                    },
                    "values": [
                        {
                            "id": "4",
                            "label": {
                                "en": "Lowest",
                                "nl": "Laagste"
                            }
                        },
                        {
                            "id": "3",
                            "label": {
                                "en": "Lower",
                                "nl": "Lager"
                            }
                        },
                        {
                            "id": "0",
                            "label": {
                                "en": "Low",
                                "nl": "Laag"
                            }
                        },
                        {
                            "id": "1",
                            "label": {
                                "en": "Normal",
                                "nl": "Normaal"
                            }
                        },
                        {
                            "id": "2",
                            "label": {
                                "en": "High",
                                "nl": "Hoog"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "label": {
                "en": "Camera information",
                "nl": "Camera informatie"
            },
            "children": [
                {
                    "id": "model",
                    "type": "label",
                    "label": {
                        "en": "Model",
                        "nl": "Model"
                    },
                    "value": "unknown"
                },
                {
                    "id": "mac",
                    "type": "label",
                    "label": {
                        "en": "MAC",
                        "nl": "MAC"
                    },
                    "value": "-"
                },
                {
                    "id": "firmware",
                    "type": "label",
                    "label": {
                        "en": "Firmware version",
                        "nl": "Firmware versie"
                    },
                    "value": "unknown"
                },
                {
                    "id": "hardware",
                    "type": "label",
                    "label": {
                        "en": "Hardware version",
                        "nl": "Hardware versie"
                    },
                    "value": "unknown"
                }
            ]
        },
        {
            "type": "group",
            "label": {
                "en": "Camera support",
                "nl": "Camera ondersteuning"
            },
            "children": [
                {
                    "id": "sdcard_support",
