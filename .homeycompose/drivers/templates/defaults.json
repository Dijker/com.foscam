{
    "images": {
        "large": "{{driverPath}}/assets/images/large.png",
        "small": "{{driverPath}}/assets/images/small.png"
    },
    "icon": "{{driverPath}}/assets/icon.svg",
    "capabilities": [
        "brightness",
        "contrast",
        "flip",
        "hue",
        "mirror",
        "saturation",
        "sharpness"
    ],
    "class": "other",
    "pair": [
        {
            "id": "start",
            "$template": "start"
        }
    ],
    "$flow": {
        "actions": [
            { "$extends": "reboot" },
            { "$extends": "brightness" },
            { "$extends": "contrast" },
            { "$extends": "flip" },
            { "$extends": "hue" },
            { "$extends": "mirror" },
            { "$extends": "motion_detection_isenabled" },
            { "$extends": "saturation" },
            { "$extends": "sharpness" },
            { "$extends": "snapshot" },
            { "$extends": "send_image" },
            { "$extends": "ptz_goto_preset_point" }
        ],
        "triggers": [
            { "$extends": "snapshot" }
        ]
    },
     "settings": [
        {
            "type": "group",
            "label": {
                "en": "Network settings",
                "nl": "Netwerk instellingen"
            },
            "children": [
                {
                    "id": "host",
                    "type": "text",
                    "label": {
                        "en": "Hostname / IP address",
                        "nl": "Hostnaam / IP adres"
                    },
                    "value": "unknown"
                },
                {
                    "id": "port",
                    "type": "number",
                    "label": {
                        "en": "Port",
                        "nl": "Poort"
                    },
                    "value": 88,
                    "min": 1,
                    "max": 65533
                },
                {
                    "id": "username",
                    "type": "text",
                    "label": {
                        "en": "Username",
                        "nl": "Gebruikersnaam"
                    },
                    "value": "unknown"
                },
                {
                    "id": "password",
                    "type": "password",
                    "label": {
                        "en": "Password",
                        "nl": "Wachtwoord"
                    },
                    "value": "unknown"
                }
            ]
        },
        {
            "type": "group",
            "label": {
                "en": "Motion detection settings",
                "nl": "Bewegingsdetectie instellingen"
            },
            "children": [
                {
                    "id": "motion_detect_isenable",
                    "type": "radio",
                    "label": "Status",
                    "value": "1",
                    "hint": {
                        "en": "Enable or disable motion dection",
                        "nl": "Schakel bewegingsdetectie in of uit"
                    },
                    "values": [
                        {
                            "id": "0",
                            "label": {
                                "en": "Disabled",
                                "nl": "Uitgeschakeld"
                            }
                        },
                        {
                            "id": "1",
                            "label": {
                                "en": "Enabled",
                                "nl": "Ingeschakeld"
                            }
                        }
                    ]
                },
                {
                    "id": "motion_detect_sensitivity",
                    "type": "radio",
                    "label": {
                        "en": "Sensitivity",
                        "nl": "Gevoeligheid"
                    },
                    "value": "1",
                    "hint": {
                        "en": "Set the sensitivity of the motion detection",
                        "nl": "Stel de gevoeligheid van de bewegingsdetectie in"
                    },
                    "values": [
                        {
                            "id": "4",
                            "label": {
                                "en": "Lowest",
                                "nl": "Laagste"
                            }
                        },
                        {
                            "id": "3",
                            "label": {
                                "en": "Lower",
                                "nl": "Lager"
                            }
                        },
                        {
                            "id": "0",
                            "label": {
                                "en": "Low",
                                "nl": "Laag"
                            }
                        },
                        {
                            "id": "1",
                            "label": {
                                "en": "Normal",
                                "nl": "Normaal"
                            }
                        },
                        {
                            "id": "2",
                            "label": {
                                "en": "High",
                                "nl": "Hoog"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "group",
            "label": {
                "en": "Device information",
                "nl": "Apparaat informatie"
            },
            "children": [
                {
                    "id": "product_name",
                    "type": "label",
                    "label": {
                        "en": "Model",
                        "nl": "Type"
                    },
                    "value": "unknown"
                },
                {
                    "id": "mac",
                    "type": "label",
                    "label": {
                        "en": "MAC",
                        "nl": "MAC"
                    },
                    "value": "AA:BB:CC:DD:EE:FF"
                },
                {
                    "id": "firmware_version",
                    "type": "label",
                    "label": {
                        "en": "Firmware version",
                        "nl": "Firmware versie"
                    },
                    "value": "unknown"
                },
                {
                    "id": "hardware_version",
                    "type": "label",
                    "label": {
                        "en": "Hardware version",
                        "nl": "Hardware versie"
                    },
                    "value": "unknown"
                }
            ]
        }
    ]
}